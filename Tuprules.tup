.gitignore

# C++ 11
CFLAGS += -std=c++11

# Full warnings
CFLAGS += -Wall

export NIX_CFLAGS_COMPILE
CFLAGS += $NIX_CFLAGS_COMPILE

# Debug
CFLAGS += -g

LINKFLAGS += `pkg-config --libs opencv`
export PKG_CONFIG_PATH

export NIX_LDFLAGS
LINKFLAGS += $NIX_LDFLAGS

!compile = |> clang++ $(CFLAGS) -c %f -o %o |> %B.o
!binary = |> clang++ $(LINKFLAGS) %f -o %o |>
